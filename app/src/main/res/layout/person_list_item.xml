<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10sp"
    android:orientation="horizontal">


        <ImageView
            android:id="@+id/personIconChat"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginRight="20sp"
            android:padding="4sp"
            android:src="@drawable/smileface">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/personNameChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Charlie Chan"
                />
            <TextView
                android:id="@+id/majorAndYearChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="AMPB (year3)"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/hobbiesChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Basketball"

                android:textSize="13sp" />
            <TextView
                android:id="@+id/meetChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="CYM canteen 3/10/2023 1330-1430"
                android:paddingBottom="10sp"
                android:textSize="13sp" />

        </LinearLayout>

    <TextView
        android:id="@+id/lastMessageDateChat"
        android:layout_width="95sp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="5sp"
        android:text="3/10/2023"
        android:textColor="#808080"

        android:textSize="13sp" />









</LinearLayout>