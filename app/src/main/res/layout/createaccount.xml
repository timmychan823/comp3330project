<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateaccountActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DAFFEB"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DAFFEB"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBackCreate"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:padding="5sp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tint="@color/black">

            </androidx.appcompat.widget.AppCompatImageView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="200px"
                android:text="Create Account"
                android:textSize="100px">
            </TextView>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="10px"
            android:text="Email Address:">

        </TextView>


        <EditText
            android:id="@+id/create_email_address"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/blank"
            android:layout_marginEnd="10sp"
            android:paddingLeft="10dp"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"

            android:textSize="40px"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="10px"
            android:text="Password:">

        </TextView>


        <EditText
            android:id="@+id/create_password"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/blank"
            android:layout_marginEnd="10sp"
            android:paddingLeft="10dp"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"

            android:textSize="40px"></EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="10px"
            android:text="Display Name:">

        </TextView>


        <EditText
            android:id="@+id/create_display_name"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/blank"
            android:layout_marginEnd="10sp"
            android:paddingLeft="10dp"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"

            android:textSize="40px"></EditText>

        <TextView
            android:id="@+id/create_account_error"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"

            android:text=""
            android:textColor="#FF8383"
            >

        </TextView>


        <Button
            android:id="@+id/create_account_button"
            android:layout_width="wrap_content"
            android:padding="10sp"
            android:layout_marginLeft="10sp"
            android:layout_height="100px"
            android:background="@drawable/login_button"
            android:text="Login">

        </Button>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>